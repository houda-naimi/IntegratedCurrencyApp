<?xml version="1.0" encoding="utf-8"?>
    <androidx.drawerlayout.widget.DrawerLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/drawer_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:openDrawer="start">

        <ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            xmlns:tools="http://schemas.android.com/tools"
            android:id="@+id/main"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fitsSystemWindows="true"
            tools:context=".Home">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <RelativeLayout
                    android:id="@+id/layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:id="@+id/cornerImg"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"

                        />

                    <com.google.android.material.floatingactionbutton.FloatingActionButton
                        android:id="@+id/MenuBtn"
                        android:layout_width="56dp"
                        android:layout_height="56dp"
                        android:clickable="true"
                        android:contentDescription="Ouvrir le sidebar"
                        android:layout_marginTop="5dp"
                        android:layout_marginLeft="20dp"
                        app:srcCompat="@drawable/baseline_menu_24"
                        style="@style/NoShadowButton"/>

                    <com.google.android.material.floatingactionbutton.FloatingActionButton
                        android:id="@+id/TranslateBtn"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:layout_marginLeft="340dp"
                        android:contentDescription="Traduire la page"
                        android:clickable="true"
                        android:backgroundTint="@color/purple"
                        app:tint="@color/white"
                        app:srcCompat="@drawable/baseline_translate_24" />

                </RelativeLayout>

                <TextView
                    android:id="@+id/text1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/cornerImg"
                    android:layout_gravity="center"
                    android:layout_marginTop="40dp"
                    android:text="@string/welcome_to"
                    android:textColor="@color/gray"
                    android:textSize="25dp"
                    android:textStyle="bold"
                    />

                <TextView
                    android:id="@+id/text2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/text1"
                    android:layout_gravity="center"
                    android:text="CurrencyConvertorApp"
                    android:textColor="@color/purple"
                    android:textSize="20dp"
                    android:textStyle="bold"
                    />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/row1"
                    android:orientation="horizontal"
                    android:layout_marginTop="40dp"
                    android:padding="10dp">

                    <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/convertorCard"
                        android:layout_margin="10dp"
                        android:layout_weight="1"
                        app:cardElevation="7dp"
                        app:cardCornerRadius="20dp"
                        >

                        <RelativeLayout
                            android:id="@+id/card1"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">
                            <ImageView
                                android:id="@+id/ConvertorImage"
                                android:layout_width="100dp"
                                android:layout_height="100dp"
                                android:layout_marginTop="10dp"
                                android:layout_centerHorizontal="true"
                                android:src="@drawable/exchange"
                                />
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:id="@+id/convertorText"
                                android:text="@string/convertor"
                                android:textSize="15sp"
                                android:textStyle="bold"
                                android:textColor="@color/Softgray"
                                android:layout_marginTop="10dp"
                                android:layout_marginBottom="10dp"
                                android:layout_centerHorizontal="true"
                                android:layout_below="@+id/ConvertorImage"/>
                        </RelativeLayout>

                    </androidx.cardview.widget.CardView>

                    <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/dashboardCard"
                        android:layout_margin="10dp"
                        android:layout_weight="1"
                        app:cardElevation="7dp"

                        app:cardCornerRadius="20dp">

                        <RelativeLayout
                            android:id="@+id/card2"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">
                            <ImageView
                                android:id="@+id/DashboardImage"
                                android:layout_width="100dp"
                                android:layout_height="100dp"
                                android:layout_marginTop="10dp"
                                android:layout_centerHorizontal="true"
                                android:src="@drawable/zitouna"
                                />
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:id="@+id/dashboardText"
                                android:text="@string/convertor_zitouna"
                                android:textSize="15sp"
                                android:textStyle="bold"
                                android:textColor="@color/Softgray"
                                android:layout_marginTop="10dp"
                                android:layout_marginBottom="10dp"
                                android:layout_centerHorizontal="true"
                                android:layout_below="@+id/DashboardImage"/>
                        </RelativeLayout>

                    </androidx.cardview.widget.CardView>


                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/row2"
                    android:orientation="horizontal"
                    android:padding="10dp">

                    <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/OpinionCard"
                        android:layout_margin="10dp"
                        android:layout_weight="1"
                        app:cardElevation="7dp"
                        app:cardCornerRadius="20dp">

                        <RelativeLayout
                            android:id="@+id/card3"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">
                            <ImageView
                                android:id="@+id/ReviewImage"
                                android:layout_width="100dp"
                                android:layout_height="100dp"
                                android:layout_marginTop="10dp"
                                android:layout_centerHorizontal="true"
                                android:src="@drawable/rating1"
                                />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:id="@+id/ReviewText"
                                android:text="@string/reviews"
                                android:textSize="15sp"
                                android:textStyle="bold"
                                android:textColor="@color/Softgray"
                                android:layout_marginTop="10dp"
                                android:layout_marginBottom="10dp"
                                android:layout_centerHorizontal="true"
                                android:layout_below="@+id/ReviewImage"/>
                        </RelativeLayout>

                    </androidx.cardview.widget.CardView>

                    <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/logoutCard"
                        android:layout_margin="10dp"
                        android:layout_weight="1"
                        app:cardElevation="7dp"
                        app:cardCornerRadius="20dp">

                        <RelativeLayout
                            android:id="@+id/card4"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">
                            <ImageView
                                android:id="@+id/LogoutImage"
                                android:layout_width="100dp"
                                android:layout_height="100dp"
                                android:layout_marginTop="10dp"
                                android:layout_centerHorizontal="true"
                                android:src="@drawable/logout2"
                                />
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:id="@+id/LogoutText"
                                android:text="@string/logout"
                                android:textSize="15sp"
                                android:textStyle="bold"
                                android:textColor="@color/Softgray"
                                android:layout_marginTop="10dp"
                                android:layout_marginBottom="10dp"
                                android:layout_centerHorizontal="true"
                                android:layout_below="@+id/LogoutImage"/>
                        </RelativeLayout>

                    </androidx.cardview.widget.CardView>

                </LinearLayout>

            </LinearLayout>

        </ScrollView>

        <com.google.android.material.navigation.NavigationView
            android:id="@+id/navigation_view"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="start"
            app:menu="@menu/menu_navigation"
            app:headerLayout="@layout/nav_header"/>

    </androidx.drawerlayout.widget.DrawerLayout>
